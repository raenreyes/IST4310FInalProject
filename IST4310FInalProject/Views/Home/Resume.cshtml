@model StudentInfo

<div class="row resume-margin tnr">
    <h1 class="text-center">@Model.FirstName @Model.LastName</h1>
    <p class="fs-5 text-center">@Model.City | @Model.PhoneNumber</p>
    <div class="full-width-line"></div>
    <h2 class="mt-2">EDUCATION</h2>
    <div class="full-width-line"></div>
    <div class="mt-3">
        @foreach (var e in Model.Educations)
        {
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="fs-5 fw-bold">@e.SchoolName</h3>
                <span class="text-end fs-5 fw-bold">@e.City,@e.State</span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <p class="fs-5 ">@e.Degree of @e.Major</p>
                <span class="text-end fs-5">@e.EndDate.ToString("MM/dd/yyyy")</span>
            </div>
            <ul class="fs-5">
                <li>GPA: @e.Gpa</li>
            </ul>
        }
    </div>
    <div class="full-width-line"></div>
    <h2 class="mt-2">WORK EXPERIENCE</h2>
    <div class="full-width-line"></div>
    <div class="mt-3">
        @foreach(var w in Model.WorkExperiences) {
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="fs-5 fw-bold">@w.CompanyName | <span style="font-weight: 100">@w.JobTitle</span></h3>
                <span class="text-end fs-5">@w.StartDate.ToString("MM/dd/yyyy") - @w.EndDate.ToString("MM/dd/yyyy")</span>
            </div>
            <div class="fs-5"> 
                @Html.Raw(w.Responsibilities)
            </div>
        }
    </div>
    <div class="full-width-line"></div>
    <h2 class="mt-2">PROJECTS</h2>
    <div class="full-width-line"></div>
    <div class="mt-3">
        @foreach (var p in Model.Projects)
        {
            <div>
                <h3 class="fs-5 fw-bold">@p.Title | <span style="font-weight: 100">@p.TechnologiesUsed</span></h3>
            </div>
            <div class="fs-5">
                @Html.Raw(p.Description)
            </div>
        }
    </div>
    <div class="full-width-line"></div>
    <h2 class="mt-2">SKILLS</h2>
    <div class="full-width-line"></div>
    <div class="mt-3">
        @foreach (var s in Model.Skills)
        {
            <ul>
                <li class="fs-5 fw-bold">
                    @s.Heading
                    <p style="font-weight: 100">@s.ToolSkills</p>
                </li>
            </ul>
        }
    </div>
</div>





<style>
    .tnr {
        font-family: 'Times New Roman', Times, serif;
    }

    .resume-margin {
        margin-left: 10px;
        margin-right: 10px;
    }
</style>